@model Service.Application.TransDataFeature.Queries.GetSearchDetail
@{
    ViewData["Title"] = "Multi Search";
}

<form class="row g-3">
    <div class="col-md-4">Search Criteria</div>
    <div class="col-md-4">
        <input class="form-check-input" type="radio" name="op" value="1" checked>
        <label class="form-check-label">GCE</label>
    </div>
    <div class="col-md-4">
        <input class="form-check-input" type="radio" name="op" value="2">
        <label class="form-check-label">GCR</label>
    </div>
    <div class="col-md-6">
        <label for="inputEmail4" class="form-label">Agent CEA NO</label>
        <input class="form-control" asp-for="AgentCEANO">
    </div>
    <div class="col-md-6">
        <label for="inputPassword4" class="form-label">Agent NAME</label>
        <input type="form-control" class="form-control" asp-for="AgentName">
    </div>
    <div class="col-md-12">
        <label for="inputEmail4" class="form-label">Submission Date/Received</label>
    </div>
    <div class="col-md-6 mt-0">
        <label for="inputEmail4" class="form-label">From</label>
        <input type="date" class="form-control" asp-for="From">
    </div>
    <div class="col-md-6 mt-0">
        <label for="inputEmail4" class="form-label">To</label>
        <input type="date" class="form-control" asp-for="To">
    </div>
    <button type="button" class="btn btn-primary" id="Search">Search</button>
</form>


<div id="partialViewContainer"></div>



@section Scripts{
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#Search").click(function (event) {
                var formData = {
                    op: document.querySelector('input[name="op"]:checked').value,
                    AgentCEANO: $("#AgentCEANO").val(),
                    AgentName: $("#AgentName").val(),
                    From: document.querySelector("#From").value,
                    To: document.querySelector("#To").value,
                };

                //alert(op);
                //alert(formData.AgentCEANO);
                //alert(formData.AgentName);
                //alert(formData.From);
                //alert(formData.To);

                $.ajax({
                    url: '/TransData/Search',
                    type: "POST",
                    data: formData,
                    success: function (result) {
                        $('#partialViewContainer').empty();
                        $('#partialViewContainer').html(result);
                    },
                    error: function (response) {
                        console.log(`error`);
                    },
                });
                event.preventDefault();
            });
        });
    </script>
}